<?xml version="1.0" encoding="UTF-8"?>
<ruleset comparisonMethod="maven"
         xmlns="http://mojo.codehaus.org/versions-maven-plugin/rule/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://mojo.codehaus.org/versions-maven-plugin/rule/2.0.0
                             https://www.mojohaus.org/versions/versions-maven-plugin/xsd/rule-2.0.0.xsd">
    <rules>
        <!--
            jmolecules-integrations: the 1.x line (published June 2022) predates the current
            0.x line (latest 0.33.0, December 2025). The project reset its versions after
            a reorganization. Ignore the legacy 1.x series.
        -->
        <rule groupId="org.jmolecules.integrations">
            <ignoreVersions>
                <ignoreVersion type="regex">1\..*</ignoreVersion>
            </ignoreVersions>
        </rule>
    </rules>
</ruleset>
